.wrapper
  = render 'shared/admin_sidebar'
  .main-panel
    = render 'shared/admin_dashboard_navbar'
    .content{style: 'margin-top: 0px;'}
      .container-fluid
        = render 'shared/flash_messages'
        .row
          .col-lg-12.col-md-12
            .card
              .card-header
                %h4.card-title
                  = "#{@camera.camera_name}"
                  .pull-right
                    %a{href: edit_camera_path(@camera), class: 'btn btn-primary'}
                      %i.fa.fa-pencil-square-o
                      Edit
              .card-body
                Device:
                = @camera.device_name
                %br
                Type:
                = @camera.camera_type
                %br
                IP Address:
                = @camera.ip_address
                %br
                Port:
                = @camera.port_nbr
                %br
                Yard ID:
                = @camera.yardid
                %ul.list-inline
                  %li.list-inline-item
                    %a.btn.btn-primary{href: '#image_capture', "data-target" => "#image_capture", "data-toggle" => "modal"} Capture Image
                  %li.list-inline-item= link_to 'Capture Shipment', '#', class: 'btn btn-primary'
                  %li.list-inline-item= link_to 'Capture CustPic', '#', class: 'btn btn-primary'


                
                %br
                
              .card-footer
                %a{href: cameras_path}
                  %i.fa.fa-angle-left
                  Back
                .pull-right
                  = link_to 'Delete', @camera, :method => :delete, class: 'btn btn-danger btn-sm', :data => { :confirm => 'Are you sure you want to delete this camera?' }

= render partial: 'image_capture_modal'