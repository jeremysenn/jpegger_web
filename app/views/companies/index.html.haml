.wrapper
  = render 'shared/admin_sidebar'
  .main-panel
    = render 'shared/admin_users_navbar'
    .content
      .container-fluid
        = render 'shared/flash_messages'
        .row
          .col-lg-12.col-md-12
            .card
              .card-header
                %h4.card-title Companies
              .card-body.table-responsive
                -#
                  - unless @users.blank?
                    %table.table.table-hover
                      %thead.text-warning
                        %th First Name
                        %th Last Name
                        %th Email
                        %th Role
                        %th Customer Name
                        %th Active
                        %td
                      %tbody
                        - @users.each do |user|
                          %tr
                            %td= user.first_name
                            %td= user.last_name
                            %td= user.email
                            %td= user.role
                            %td= user.customer_name.blank? ? 'N/A' : user.customer_name
                            %td= user.active? ? 'Yes' : 'No'
                            %td
                              = link_to 'Show', users_admin_path(user), class: 'btn btn-info btn-sm'
                              = link_to 'Edit', edit_users_admin_path(user), class: 'btn btn-primary btn-sm'
                  - else
                    %p None
              .card-footer