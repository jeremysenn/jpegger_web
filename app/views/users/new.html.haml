.container-fluid
  = render 'shared/flash_messages'
  .row
    .col-sm-6.offset-sm-3
      .card
        .card-header
          %h4.card-title.text-center 
            %i.fa.fa-user
            New User
            .pull-right
              = link_to "<i class='fa fa-close fa-lg'></i>".html_safe, :back
        .card-body
          = render 'form'
-#
  .content-wrapper
    .container
      / Content Header (Page header)
      %section.content-header
        = render 'shared/flash_messages'
        %h1
          %i.fa.fa-user
          New User
      / Main content
      %section.content
        .row
          .col-xs-12.col-sm-12.col-md-6
            = render 'form'