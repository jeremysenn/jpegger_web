.card.card-stats
  .card-header.card-header-icon
    .card-icon
      %i.material-icons search
    %p.card-category Shipment Search
    -# %h3.card-title= "#{pluralize(number_with_delimiter(@all_shipments.count), 'shipment')} found."
    %h3.card-title= "#{pluralize(number_with_delimiter(@shipments.count), 'shipment')} found."
  .card-body
    = form_tag url, :method => 'get' do
      %ul.nav.justify-content-center
        %li.nav-item
          .form-group
            %label{:for => :start_date} Start
            = text_field_tag :start_date, nil, type: 'date', :placeholder => "yyyy-mm-dd", value: @start_date, class: "form-control"
        %li.nav-item
          &nbsp;
        %li.nav-item
          .form-group
            %label{:for => :end_date} End
            = text_field_tag :end_date, nil, type: 'date', :placeholder => "yyyy-mm-dd", value: @end_date, class: "form-control"
      .row
        .col-sm-12.col-md-3
          .form-group
            =# text_field_tag "search[ticket_number]", nil, :placeholder => shipment_ticket_nbr_field_description, value: @ticket_number, class: "form-control"
            = text_field_tag :ticket_number, nil, :placeholder => "Ticket Number", value: @ticket_number, class: "form-control"
        .col-sm-12.col-md-3
          .form-group
            =# text_field_tag "search[customer_name]", nil, :placeholder => shipment_cust_name_field_description, value: @customer_name, class: "form-control"
            = text_field_tag :customer_name, nil, :placeholder => "Customer Name", value: @customer_name, class: "form-control"
        .col-sm-12.col-md-3
          .form-group
            =# text_field_tag "search[event_code]", nil, :placeholder => shipment_event_code_field_description, value: @event_code, class: "form-control"
            =# select_tag "search[event_code]", options_for_select(LookupDef.shipment_event_codes(current_user), @event_code), prompt: shipment_event_code_field_description, class: "form-control"
            = text_field_tag :event_code, nil, :placeholder => "Event Code", value: @event_code, class: "form-control"
        .col-sm-12.col-md-3
          .form-check
            %label.form-check-label
              %input.form-check-input{id: 'show_thumbnails', name: 'show_thumbnails', :type => "checkbox", :value => 1, checked: @show_thumbnails}/
              =# check_box_tag :show_thumbnails, class: 'form-check-input', type: 'checkbox'
              Thumbnails
              %span.form-check-sign
                %span.check
          .form-group
            = button_tag(:type => 'submit', :class => 'btn', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Search" }) do
              %i.material-icons search
              Search
          

  -#
    .card-footer
      .stats
        %i.material-icons.text-danger warning
        %a{:href => "#pablo"} Get More Space...