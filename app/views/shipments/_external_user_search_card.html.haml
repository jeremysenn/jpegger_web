.card.card-stats
  .card-header.card-header-success.card-header-icon
    .card-icon
      %i.material-icons search
    %p.card-category Shipment Search
    %h3.card-title= "#{pluralize(number_with_delimiter(@all_shipments.count), 'shipment')} found."
  .card-body
    = form_tag url, :method => 'get', :class => "navbar-form form-inline" do
      .input-group
        = text_field_tag "search[ticket_number]", nil, :placeholder => shipment_ticket_nbr_field_description, value: @ticket_number, class: "form-control"
      &nbsp;
      .input-group
        = select_tag "search[event_code]", options_for_select(LookupDef.shipment_event_codes(current_user), @event_code), prompt: shipment_event_code_field_description, class: "form-control"
      &nbsp;
      .input-group
        = text_field_tag "search[start_date]", nil, :placeholder => "Start Date", value: @start_date, class: "form-control", style: "z-index: 2;"#, readonly: true
      &nbsp;
      .input-group
        = text_field_tag "search[end_date]", nil, :placeholder => "End Date", value: @end_date, class: "form-control", style: "z-index: 2;"#, readonly: true
      &nbsp;
      .input-group
        = button_tag(:type => 'submit', :class => 'btn btn btn-round btn-just-icon') do
          %i.material-icons search