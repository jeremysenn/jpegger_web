.container-fluid
  .row
    .col-sm-6.offset-sm-3
      .card
        .card-header
          %h4.card-title.text-center Sign Up
        .card-body
          - resource.build_company
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification
            = f.input :role, as: :hidden, input_html: { value: "admin" }
            = f.input :active, as: :hidden, input_html: { value: true }
            = f.input :company_id, as: :hidden, input_html: { value: 1 }
            = f.simple_fields_for :company do |cf|
              = cf.input :name, label: 'Company Name', autofocus: true
            .form-group
              = f.input :first_name, required: true
            .form-group
              = f.input :last_name, required: true
            .form-group
              = f.input :email, required: true, input_html: { autocomplete: "email" }
            .form-group
              = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }    
            .form-group 
              = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }
            = f.submit "Sign up", class: 'btn btn-primary'
          = render "devise/shared/links"

          -#
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-group
                = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", :placeholder => "Enter email"} 
              .form-group
                = f.input :password, required: false, input_html: { autocomplete: "current-password", :placeholder => "Enter password" } 
              .form-check
                %label.form-check-label
                  -# %input.form-check-input{:type => "checkbox", :value => ""}/
                  = f.check_box :remember_me, class: 'form-check-input'
                  Option one is this
                  %span.form-check-sign
                    %span.check
              = f.submit "Log in", class: 'btn btn-primary'
            = render "devise/shared/links"

-#
  %h2 Sign up
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification
    .form-inputs
      = f.input :email,                       |
        required: true,                       |
        autofocus: true,                      |
        input_html: { autocomplete: "email" } |
      = f.input :password,                                                                    |
        required: true,                                                                       |
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), |
        input_html: { autocomplete: "new-password" }                                          |
      = f.input :password_confirmation,              |
        required: true,                              |
        input_html: { autocomplete: "new-password" } |
    .form-actions
      = f.button :submit, "Sign up"
  = render "devise/shared/links"
