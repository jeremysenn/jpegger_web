.sidebar{"data-background-color" => "white", "data-color" => "purple", "data-image" => asset_path("sidebar-1.jpg")}
  .logo
    %a.simple-text.logo-normal{:href => root_path}
      %i.material-icons image
      JPEGger WEB
  .sidebar-wrapper
    %ul.nav
      %li.nav-item{:class => (params[:controller] == 'welcome') ?  "active" : ""}
        %a.nav-link{:href => root_path}
          %i.material-icons dashboard
          %p Dashboard
      - unless images_table.blank?
        %li.nav-item{:class => (params[:controller] == 'images') ?  "active" : ""}
          %a.nav-link{:href => images_path}
            %i.fa.fa-image
            %p Images
      - unless shipments_table.blank?
        %li.nav-item{:class => (params[:controller] == 'shipments') ?  "active" : ""}
          %a.nav-link{:href => '#'}
            %i.fa.fa-truck
            %p Shipments