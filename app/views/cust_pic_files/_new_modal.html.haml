/ Modal
#new_cust_pic.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title New Shipment
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = simple_form_for ShipmentFile.new do |f|
          = f.error_notification
          = f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id}
          = f.input :yard_id, :as => :hidden, :input_html => { :value => current_user.company.yard_id}
          .form-group
            = f.input :customer_number, label: 'Customer Number', :input_html => { :value => @customer_number}, required: true
          .form-group
            = f.input :first_name, label: 'First Name', :input_html => { :value => @first_name}
          .form-group
            = f.input :last_name, label: 'Last Name', :input_html => { :value => @last_name}
          .form-group
            = f.input :event_code, label: 'Event Code', :input_html => { :value => @event_code}
          -#
            - if current_user.company.leads_online?
              .form-group
                .form-check
                  %label.form-check-label
                    = f.check_box :leads_online, class: 'form-check-input', checked: true
                    Leads Online
                    %span.form-check-sign
                      %span.check
              .card{id: 'leads_online_row', style: 'display:block; margin-top: 0px;'}
                .form-group.col-xs-12.col-sm-6
                  = f.input :camera_class, collection: camera_classes, as: :select, prompt: "Camera Class", label: false
                .form-group.col-xs-12.col-sm-6
                  = f.input :camera_position, collection: camera_positions, as: :select, prompt: "Camera Position", label: false
          .form-group
            = f.input :file, as: :file, input_html: {class: 'form-control-file', onchange: "PreviewCustPic();"}, label: "<i class='fa fa-camera fa-lg text-primary'></i> --Choose Image--".html_safe, required: true
            = f.input :file_cache, as: :hidden
            .col-xs-6
              = image_tag('', id: 'file_cust_pic', class: 'img-fluid', style: "max-width: 100%; and height: auto;")
          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
            %button.btn.btn-primary{:type => "submit", :onclick => "showNotification('top','right')"} Save